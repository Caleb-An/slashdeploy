<div id="intro">
  <p class="text-center lead">We're still in beta. Enter your email below to get early access.</p>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag early_access_path, method: 'post' do |f| %>
      <div class="form-group">
        <div class="input-group">
          <input type="email" class="form-control" name="email" placeholder="Email">
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit">Give me access!</button>
          </span>
        </div><!-- /input-group -->
      </div><!-- /.form-group -->
    <% end %>
  </div><!-- /.col-lg-6 -->
</div>
